		<table>PERSON</table>
		<url>jdbc:mysql://localhost/</url>
		<user>root</user>
		<password>toor</password>
	</DatabaseReaderConnection>

	<DatabaseWriterConnection>
		<database>ETL</database>
		<table>PERSON_ENCRYPTED</table>
		<url>jdbc:mysql://localhost/</url>
