		<schema>tz</schema>
		<url>jdbc:postgresql://localhost:5432/</url>
		<user>rosita</user>
		<password>rosita@2012</password>
	</DatabaseSourceA>


	<DatabaseSourceB>
		<database>rosita</database>
		<table>sourcebi_100k</table>
		<schema>tz</schema>
		<url>jdbc:postgresql://localhost:5432/</url>
		<user>rosita</user>
		<password>rosita@2012</password>
	</DatabaseSourceB>

	<DatabaseSaver>
		<database>rosita</database>
		<url>jdbc:postgresql://localhost:5432/</url>
		<schema>tz</schema>
		<user>rosita</user>
		<password>rosita@2012</password>
	</DatabaseSaver>

	<LinkageConfig>
		<acceptancelevel>80</acceptancelevel>
		<weightidenfifier>MANUAL</weightidenfifier>
		<joinmethod>BLOCKING_SEARCH</joinmethod>
		<missingdatavalue>ATTRIBUTE_DEDUCTION</missingdatavalue>
	</LinkageConfig>

	
	<DatabaseMap>
		
		<MappedPair attr="FirstName" algorithm="EDIT_DISTANCE" weight="0.25">
			<read_col>first</read_col>
			<write_col>first</write_col>
		</MappedPair>
		<MappedPair attr="LastName" algorithm="EDIT_DISTANCE" weight="0.25">
			<read_col>last</read_col>
			<write_col>last</write_col>
		</MappedPair>
		<MappedPair attr="Address" algorithm="ADDRESS_DISTANCE" weight="0.4">
			<read_col>address_1</read_col>
			<write_col>address_1</write_col>
		</MappedPair>
		<MappedPair attr="ZIPCode" algorithm="EDIT_DISTANCE" weight="0.1">
			<read_col>zip</read_col>
			<write_col>zip</write_col>
		</MappedPair>
		<MappedPair attr="BirthYear" algorithm="EDIT_DISTANCE" weight="0">
			<read_col>year_of_birth</read_col>
			<write_col>year_of_birth</write_col>
		</MappedPair>

	</DatabaseMap>
	
	<Blocking>
		<read_col>year_of_birth</read_col>
		<write_col>year_of_birth</write_col>
	</Blocking>
	<Linking>
		<left_pk>x_demographic_id</left_pk>
		<right_pk>x_demographic_id</right_pk>
	</Linking>

</linkage_config>
